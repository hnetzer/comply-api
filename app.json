{
  "name": "comply-api",
  "env": {
    "PORT": {
      "required": false
    },
    "NODE_ENV": {
      "required": false
    },
    "DATABASE_URL": {
      "required": false
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": false
    },
    "JWT_SECRET": {
      "required": true,
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "addons": [ "heroku-postgresql:hobby-dev" ],
  "scripts": {
    "postdeploy": "sequelize db:migrate"
  },
  "environments": {
    "review": {
      "addons": ["heroku-postgresql:hobby-basic"],
      "scripts": {
        "postdeploy": "sequelize db:migrate && sequelize db:seed:all"
      }
    }
  }
}

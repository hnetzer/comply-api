{
  "name": "comply-api",
  "env": {
    "PORT": {
      "required": false
    },
    "NODE_ENV": {
      "required": false
    },
    "DATABASE_URL": {
      "required": true
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": false
    },
    "JWT_SECRET": {
      "required": true,
      "generator": "secret"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "addons": [ "heroku-postgresql:hobby-basic" ]
}
